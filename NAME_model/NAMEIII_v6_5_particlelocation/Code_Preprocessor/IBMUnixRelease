# Script for compiling code on Unix PowerPCs with XL compiler

xlf90  \
  -WF,-DXLUnixCompiler \
  -WF,-DExtraChecks \
  -O3 -qnoescape \
../Code_NameIII/GlobalParameters.F90 \
../Code_NameIII/ErrorAndMessage.F90  \
../Code_NameIII/String.F90           \
../Code_NameIII/System.F90           \
Preprocessor.F90 \
MainPreprocessor.F90 \
-o Preprocessor.exe

mv Preprocessor.exe ../Executables_Unix/Preprocessor_64bit.exe
chmod 744 ../Executables_Unix/Preprocessor_64bit.exe
 
rm *.mod
