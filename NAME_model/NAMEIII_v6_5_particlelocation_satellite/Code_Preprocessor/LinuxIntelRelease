# Script for compiling code on Linux PCs with Intel compiler

ifort -Wp,-macro=no -O3 -w -extend_source -nbs -Vaxlib \
-DIntelLinCompiler -DExtraChecks \
../Code_NameIII/GlobalParameters.F90 \
../Code_NameIII/ErrorAndMessage.F90  \
../Code_NameIII/String.F90           \
../Code_NameIII/System.F90           \
Preprocessor.F90 \
MainPreprocessor.F90 \
-o Preprocessor.exe

if test `uname` = 'Linux'
then
 if test `uname -p` = 'x86_64'
 then
   mv Preprocessor.exe ../Executables_Linux/Preprocessor_64bit.exe
   chmod 744 ../Executables_Linux/Preprocessor_64bit.exe
 else
   mv Preprocessor.exe ../Executables_Linux/Preprocessor.exe
   chmod 744 ../Executables_Linux/Preprocessor.exe
 fi
fi
 
rm *.mod
