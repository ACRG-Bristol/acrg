# Script for compiling Release version of Name2Adms code on Linux PCs with Intel compiler

ifort -Wp,-macro=no -O3 -w -extend_source -nbs -Vaxlib \
-DIntelLinCompiler -DExtraChecks \
../Code_NameIII/GlobalParameters.F90  \
../Code_NameIII/ErrorAndMessage.F90   \
../Code_NameIII/String.F90            \
../Code_NameIII/System.F90            \
../Code_NameIII/Screen.F90            \
../Code_NameIII/Unit.F90              \
../Code_NameIII/Time.F90              \
../Code_NameIII/Maths.F90             \
../Code_NameIII/Physics.F90           \
../Code_NameIII/HeadedFile.F90        \
../Code_NameIII/ErrorAndMessageII.F90 \
../Code_NameIII/CoordinateSystem.F90  \
../Code_NameIII/GridAndDomain.F90     \
../Code_NameIII/Sort.F90              \
../Code_NameIII/PhysicalUnits.F90     \
../Code_NameIII/Service.F90           \
MainName2Adms.F90 \
-o name2adms.exe

if test `uname` = 'Linux'
then
 if test `uname -p` = 'x86_64'
 then
   mv name2adms.exe ../Executables_Linux/name2adms_64bit.exe
   chmod 744 ../Executables_Linux/name2adms_64bit.exe
 else
   mv name2adms.exe ../Executables_Linux/name2adms.exe
   chmod 744 ../Executables_Linux/name2adms.exe
 fi
fi

rm *.mod
